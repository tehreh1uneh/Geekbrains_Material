<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">monospace</item>
    </style>

    <!--android:fontFamily="@font/roboto_mono_medium_italic"-->

    <style name="MyTheme.Yellow" parent="MyTheme">
        <item name="TextViewStyle">@style/MyAccentTextViewStyle</item>
    </style>

    <style name="MyTheme.Red" parent="MyTheme">
        <item name="TextViewStyle">@style/MyYellowTextViewStyle</item>
    </style>
</resources>